<div class="chatboxhead">
  <div class="chatboxtitle">
    <i class="fa fa-comments"></i>

    <h1><%= @reciever.name %> </h1>
  </div>
  <div class="chatboxoptions">
    <%= link_to "<i class='fa  fa-minus'></i> ".html_safe, "#", class: "toggleChatBox", "data-cid" => @chat.id %>
    &nbsp;&nbsp;
    <%= link_to "<i class='fa  fa-times'></i> ".html_safe, "#", class: "closeChat", "data-cid" => @chat.id %>
  </div>
  <br clear="all"/>
</div>
<div class="chatboxcontent">
  <% if @msgs.any? %>
      <%= render @msgs %>
  <% end %>
</div>
<div class="chatboxinput">
  <%= form_for([@chat, @msg], :remote => true, :html => {id: "chat_form_#{@chat.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @chat.id %>
  <% end %>
</div>

<%= subscribe_to chat_path(@chat) %>
